{
  "name": "Cube Timer",
  "description": "A cube timer I made.",
  "version": "1.0",
  "manifest_version": 2,

  "browser_action": {
    
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    },
    "default_title":"Cube Timer"
  },
  
  "permissions": [
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "icon.png", "64": "icon.png"
  }
}